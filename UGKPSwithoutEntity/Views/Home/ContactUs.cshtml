@model UGKPSwithoutEntity.Models.ContactUs

@{
    /**/
    ViewBag.Title = "ContactUs";
}

<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p class="h2 text-center row-">Write to us</p>
    <hr />
    if (ViewBag.Message != null)
    {
        if (ViewBag.Message.Contains("Success"))
        {
            <div class="alert alert-success">
                <strong>@ViewBag.Message</strong>
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <strong>@ViewBag.Message</strong>
            </div>
        }
    }
    <div class="row">
        <div class="col-md-5 col-md-offset-1">
            <div class="form-group">
                <label for="form_name">First Name *</label>
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your first name * " } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="form_lastname">Lastname *</label>
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your last name * " } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 col-md-offset-1">
            <div class="form-group">
                <label for="form_email">Email *</label>
                @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your email id * " } })
                @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="form_phone">Contact No *</label>
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your contact number * " } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-md-offset-1">
            <div class="form-group">
                <label for="form_message">Message *</label>
                @Html.TextAreaFor(model => model.Message, 5, 12, new { @class = "form-control", @placeholder = "Message for us * ", @style = "max-width : 67.5%" })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-12 col-md-offset-1">
            <input type="submit" class="btn btn-success btn-send" value="Send message">
        </div>
    </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
